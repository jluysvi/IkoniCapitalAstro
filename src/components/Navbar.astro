---
import logolight from '../assets/logolight.svg';
---
<nav class="bg-neutral-900 fixed w-full z-20 top-0 start-0 border-b border-neutral-800">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <img src={logolight.src} class="h-16" alt="Ikoni Capital Logo">
      </a>
      <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
        <a type="button" href="/contact" class="text-white bg-green-800 hover:bg-green-900 px-4 py-3 text-center">Get started</a>
        <button data-collapse-toggle="navbar-sticky" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-400 rounded-lg md:hidden hover:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-neutral-800" aria-controls="navbar-sticky" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
        </button>
      </div>
      <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
        <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-neutral-800 bg-neutral-900 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-neutral-900">
          <li>
            <a href="/" class="block py-2 px-3 text-gray-300 hover:bg-neutral-800 md:hover:bg-transparent hover:text-green-700 md:p-0">Home</a>
          </li>
          <li>
            <a href="/about" class="block py-2 px-3 text-gray-300 hover:bg-neutral-800 md:hover:bg-transparent hover:text-green-700 md:p-0">About</a>
          </li>
          <li>
            <a href="/services" class="block py-2 px-3 text-gray-300 hover:bg-neutral-800 md:hover:bg-transparent hover:text-green-700 md:p-0">Services</a>
          </li>
          <li>
            <a href="/portfolio" class="block py-2 px-3 text-gray-300 hover:bg-neutral-800 md:hover:bg-transparent hover:text-green-700 md:p-0">Portfolio</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <script>
 document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.querySelector('[data-collapse-toggle="navbar-sticky"]');
    const menu = document.getElementById('navbar-sticky');

    hamburger?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
        const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
        hamburger.setAttribute('aria-expanded', (!isExpanded).toString());
    });
});
  </script>