---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

// Import portfolio images (you'll need to add these)
import agriculture from "../assets/agriculture.webp";
import cross from "../assets/cross.webp";
import solar from "../assets/solar.webp";
---

<Layout>
    <section class="relative min-h-screen pt-24">
        <div class="container mx-auto px-4 py-16 w-[90%]">
            <h1 class="text-center font-light text-4xl mb-16">Our Portfolio</h1>

            <!-- Portfolio Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Portfolio Item 1 -->
                <a href="/portfolio/ikoni-farms" class="block bg-neutral-800 rounded-lg shadow-lg overflow-hidden group transition-transform duration-300 hover:-translate-y-1">
                    <div class="relative overflow-hidden">
                        <Image 
                            src={agriculture} 
                            alt="Agricultural Scenery"
                            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                            quality={10}
                        />
                        <div class="absolute inset-0 bg-green-800 opacity-0 group-hover:opacity-75 transition-opacity duration-300 flex items-center justify-center">
                            <span class="text-white text-lg font-semibold">View Details</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-green-500 mb-2">Ikoni Farms</h3>
                        <p class="text-gray-300 mb-4">Sustainable farming operation, focusing on high quality agricultural exports.</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Investment Date: 2021</span>
                            <span class="text-sm text-gray-400">Stake: 60%</span>
                        </div>
                    </div>
                </a>

                <!-- Portfolio Item 2 -->
                <a href="/portfolio/victory-digital-media" class="block bg-neutral-800 rounded-lg shadow-lg overflow-hidden group transition-transform duration-300 hover:-translate-y-1">
                    <div class="relative overflow-hidden">
                        <Image 
                            src={cross} 
                            alt="Cross On A Hill"
                            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                            quality={10}
                        />
                        <div class="absolute inset-0 bg-green-800 opacity-0 group-hover:opacity-75 transition-opacity duration-300 flex items-center justify-center">
                            <span class="text-white text-lg font-semibold">View Details</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-green-500 mb-2">Victory Digital Media</h3>
                        <p class="text-gray-300 mb-4">A Christian media organisation serving content on various platforms.</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Investment Date: 2022</span>
                            <span class="text-sm text-gray-400">Stake: 51%</span>
                        </div>
                    </div>
                </a>

                <!-- Portfolio Item 3 -->
                <a href="/portfolio/abela-solar" class="block bg-neutral-800 rounded-lg shadow-lg overflow-hidden group transition-transform duration-300 hover:-translate-y-1">
                    <div class="relative overflow-hidden">
                        <Image 
                            src={solar} 
                            alt="Solar Panels"
                            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                            quality={10}
                        />
                        <div class="absolute inset-0 bg-green-800 opacity-0 group-hover:opacity-75 transition-opacity duration-300 flex items-center justify-center">
                            <span class="text-white text-lg font-semibold">View Details</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-green-500 mb-2">Abela Solar</h3>
                        <p class="text-gray-300 mb-4">A large solar installation company based in Johannesburg.</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Investment Date: 2023</span>
                            <span class="text-sm text-gray-400">Stake: 45%</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>
</Layout>