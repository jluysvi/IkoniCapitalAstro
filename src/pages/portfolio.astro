---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

// Import portfolio images (you'll need to add these)
import agriculture from "../assets/agriculture.jpg";
import tourism from "../assets/tourism.jpg";
import tech from "../assets/tech.jpg";
---

<Layout>
    <section class="relative min-h-screen pt-24">
        <div class="container mx-auto px-4 py-16 w-[90%]">
            <h1 class="text-center font-light text-4xl mb-16">Our Portfolio</h1>

            <!-- Portfolio Filter -->
            <div class="flex flex-wrap justify-center gap-4 mb-12">
                <button class="px-6 py-2 bg-neutral-800 text-gray-300 hover:bg-green-800 hover:text-white rounded-lg transition-colors">
                    All
                </button>
                <button class="px-6 py-2 bg-neutral-800 text-gray-300 hover:bg-green-800 hover:text-white rounded-lg transition-colors">
                    Agriculture
                </button>
                <button class="px-6 py-2 bg-neutral-800 text-gray-300 hover:bg-green-800 hover:text-white rounded-lg transition-colors">
                    Tourism
                </button>
                <button class="px-6 py-2 bg-neutral-800 text-gray-300 hover:bg-green-800 hover:text-white rounded-lg transition-colors">
                    Technology
                </button>
            </div>

            <!-- Portfolio Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Portfolio Item 1 -->
                <div class="bg-neutral-800 rounded-lg shadow-lg overflow-hidden group">
                    <div class="relative overflow-hidden">
                        <Image 
                            src={agriculture} 
                            alt="Agricultural Investment"
                            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-green-800 opacity-0 group-hover:opacity-75 transition-opacity duration-300 flex items-center justify-center">
                            <span class="text-white text-lg font-semibold">View Details</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-green-500 mb-2">Green Fields Farming</h3>
                        <p class="text-gray-300 mb-4">Sustainable farming operation in Limpopo, focusing on export-quality citrus production.</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Investment Date: 2021</span>
                            <span class="text-sm text-gray-400">Stake: 60%</span>
                        </div>
                    </div>
                </div>

                <!-- Portfolio Item 2 -->
                <div class="bg-neutral-800 rounded-lg shadow-lg overflow-hidden group">
                    <div class="relative overflow-hidden">
                        <Image 
                            src={tourism} 
                            alt="Tourism Investment"
                            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-green-800 opacity-0 group-hover:opacity-75 transition-opacity duration-300 flex items-center justify-center">
                            <span class="text-white text-lg font-semibold">View Details</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-green-500 mb-2">Safari Lodge Group</h3>
                        <p class="text-gray-300 mb-4">Luxury safari lodge chain operating in Kruger National Park and surrounding areas.</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Investment Date: 2022</span>
                            <span class="text-sm text-gray-400">Stake: 51%</span>
                        </div>
                    </div>
                </div>

                <!-- Portfolio Item 3 -->
                <div class="bg-neutral-800 rounded-lg shadow-lg overflow-hidden group">
                    <div class="relative overflow-hidden">
                        <Image 
                            src={tech} 
                            alt="Technology Investment"
                            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-green-800 opacity-0 group-hover:opacity-75 transition-opacity duration-300 flex items-center justify-center">
                            <span class="text-white text-lg font-semibold">View Details</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-green-500 mb-2">TechPay Solutions</h3>
                        <p class="text-gray-300 mb-4">Fintech company providing digital payment solutions for African markets.</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Investment Date: 2023</span>
                            <span class="text-sm text-gray-400">Stake: 45%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

